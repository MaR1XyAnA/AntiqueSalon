<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MainStyleTextBlock" TargetType="TextBlock">
        <Setter Property="Text" Value="CollegeChatApp"/>
        <Setter Property="FontFamily" Value="\ContentFolder\FamilyFolder\#Rubik Glitch"/>
        <Setter Property="FontSize" Value="50"/>
        <Setter Property="Foreground" Value="#1d63b8"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="TitleTextBlock" TargetType="TextBlock" BasedOn="{StaticResource MainStyleTextBlock}">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="#fff"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
</ResourceDictionary>