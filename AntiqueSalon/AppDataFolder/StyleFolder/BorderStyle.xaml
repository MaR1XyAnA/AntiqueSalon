<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MainBorder" TargetType="Border">
        <Setter Property="Background" Value="#f4f000"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="ButtonBorder" TargetType="Border" BasedOn="{StaticResource MainBorder}">
        <Setter Property="Background" Value="#03000d"/>
        <Setter Property="CornerRadius" Value="10 10 0 0"/>
    </Style>
    <Style x:Key="SpaisBorder" TargetType="Border">
        <Setter Property="Background" Value="#303841"/>
        <Setter Property="CornerRadius" Value="20 20 0 0"/>
    </Style>
</ResourceDictionary>