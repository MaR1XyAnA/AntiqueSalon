<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MainBorder" TargetType="Border">
        <Setter Property="Background" Value="#212326"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="BorderBrush" Value="#212326"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="ButtonBorder" TargetType="Border">
        <Setter Property="Background" Value="#161b22"/>
        <Setter Property="CornerRadius" Value="10 10 0 0"/>
        <Setter Property="BorderBrush" Value="#161b22"/>
        <Setter Property="BorderThickness" Value="5 0 5 0"/>
    </Style>
</ResourceDictionary>